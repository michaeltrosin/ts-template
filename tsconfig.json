{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "lib": [
    "es2015"
  ],
  "baseUrl": "./",
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
